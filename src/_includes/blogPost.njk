{% extends "base.njk" %}

{% block content %}
    <article class="article">
        <header class="article__header">
            {% if post.cover and post.coverAlt %}
                {% image post.cover, post.coverAlt, "article__cover", false %}
            {% endif %}
            <aside class="article__meta">
                <time datetime="{{ post.date }}">{% date post.date %}</time>
                <p class="article__language">{{ post.language }}</p>
            </aside>
            <h1 class="article__title fancyfont font-size-x-large">{{ post.title }}</h1>
        </header>
        {% if content | toc %}
            <aside class="article__toc" data-component="toc">
                {{ content | toc | safe }}
            </aside>
        {% endif %}
        <div class="article__content">
            {{ content | safe }}
        </div>
    </article>
{% endblock %}