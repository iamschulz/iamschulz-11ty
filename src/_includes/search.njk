<form data-component="search" role="search" class="search" method="get" id="search" action="https://duckduckgo.com/">
    <input type="hidden" name="sites" value="{{ baseData.url }}">
    <input data-search-el="header" type="hidden" name="kj" value="#0e181b">
    <input data-search-el="background" type="hidden" name="k7" value="#0e181b">
    <input data-search-el="text" type="hidden" name="k8" value="#bbc2c4">
    <input data-search-el="links" type="hidden" name="k9" value="#bbc2c4">
    <input data-search-el="addresses" type="hidden" name="kx" value="#bbc2c4">
    <input type="hidden" name="kt" value="n">

    <label class="search__label" for="search-field">Search</label>
    <input class="search__input is--nomargin" id="search-field" spellcheck="true" type="text" name="q" maxlength="255" required="">

    <button class="search__button" type="submit" aria-label="DuckDuckGo Search">
        {%- svg "static/duckduckgo-brands.svg" -%}
    </button>
</form>