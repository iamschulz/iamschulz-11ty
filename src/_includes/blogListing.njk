{% extends "base.njk" %}

{% block content %}
    <ul class="article-list grid-list nolist">
    {%- for post in blog %}
        <li class="article-list__entry">
            <section class="article-card">
                <header class="article-card__header">
                    {% if post.cover and post.coverAlt %}
                        <a href="/{{ post.title | slug | url }}">
                            {% image post.cover, post.coverAlt, "article-card__cover" %}
                        </a>
                    {% endif %}
                    <aside class="article-card__meta">
                        <time datetime="2022-06-14">{{ post.date }}</time>
                        <p class="article-card__language">{{ post.language }}</p>
                    </aside>
                    <h2 class="article-card__title fancyfont font-size-large">
                        <a href="/{{ post.title | slug | url }}" class="article-card__link">{{ post.title }}</a>
                    </h2>
                </header>
            </section>
            {% if post.excerpt %}
                <div class="article-card__content">
                    {% renderMd post.excerpt %}
                </div>
                <a class="article-card__more button" href="/{{ post.title | slug | url }}">more</a>
            {% endif %}
        </li>
    {%- endfor -%}
    </ul>

    <nav class="pagination">
    {% if pagination.previousPageLink %}
        <a class="pagination__item" href="{{ pagination.previousPageHref }}">Previous</a>
    {% endif %}
    {% if pagination.nextPageLink %}
        <a class="pagination__item" href="{{ pagination.nextPageHref}}">Next</a>
    {% endif %}
    </nav>
{% endblock %}